# Email Configuration
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-digit-app-password
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=recipient@example.com
EMAIL_SUBJECT=Test Report

# Google API Configuration
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json
GOOGLE_ANALYTICS_VIEW_ID=your-view-id
SEARCH_CONSOLE_SITE=https://your-site.com

# Testing Configuration
BASE_URL=https://your-site.com
CRAWL_DEPTH=2
EXCLUDE_PATTERNS=["*/admin/*", "*/login/*"]
VIEWPORT_SIZES=["320x480", "768x1024", "1920x1080"]
SCREENSHOT_DIR=./reports/screenshots
REPORT_DIR=./reports/test-results
HISTORY_LIMIT=10

# Performance Thresholds
PERFORMANCE_SCORE_THRESHOLD=80
ACCESSIBILITY_SCORE_THRESHOLD=90
SEO_SCORE_THRESHOLD=85
VISUAL_DIFF_THRESHOLD=0.1

# Language Tool Configuration
LANGUAGE_TOOL_URL=https://api.languagetool.org/v2/check
LANGUAGE_TOOL_API_KEY=your-api-key
DEFAULT_LANGUAGE=en-US

# Notification Settings
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url
NOTIFICATION_LEVEL=error  # error, warning, info

# Security Settings
ALLOWED_DOMAINS=["your-domain.com", "api.your-domain.com"]
MAX_REQUESTS_PER_SECOND=10
REQUEST_TIMEOUT=30000

# Feature Flags
ENABLE_VISUAL_REGRESSION=true
ENABLE_ACCESSIBILITY_TESTS=true
ENABLE_SEO_TESTS=true
ENABLE_PERFORMANCE_TESTS=true
ENABLE_LANGUAGE_TESTS=true
ENABLE_SECURITY_TESTS=true
ENABLE_NOTIFICATIONS=true

# Debug Settings
DEBUG=false
LOG_LEVEL=info  # debug, info, warn, error
SAVE_HTML_SNAPSHOT=false
SAVE_CONSOLE_LOGS=true
